@model WebSiteAboutMe.Models.RegisterViewModel
@{
    ViewBag.Title = "Zarejestruj";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div id="loginForm" class="allform center">

    <h1 class="center" style="text-align: center;">@ViewBag.Title.</h1>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
      
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="informationsform center">
            <h1>Email</h1>

            @Html.TextBoxFor(m => m.Email, new { @class = "" })


            <h1>Hasło</h1>

            @Html.PasswordFor(m => m.Password, new { @class = "" })

            <h1>Potwierdź hasło</h1>

            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "" })

            <h1>Dlaczego chcesz do nas dołączyć?</h1>

            @Html.TextBoxFor(m => m.Argumentation, new { @class = "" })
        </div>
        <input type="submit" class="btn btn-default" value="Zarejestruj" />

    }
</div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
